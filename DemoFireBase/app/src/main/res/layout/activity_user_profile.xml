<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_profile"
    android:orientation="vertical"
    android:background="@drawable/user_profile">

    <Button
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Logout"
        android:textColor="#ffffff"
        android:background="#80ff0000"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="7dp"
        android:id="@+id/logout"
        />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10sp"
            android:id="@+id/welcome"

            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"></TextView>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/eName_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60sp"
                android:layout_marginTop="30sp"
                android:hint="Enter your name"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/eProfession_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60sp"
                android:hint="Enter Your Profession"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/eCompany_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60sp"
                android:hint="Enter Your Company Name"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/eSalary_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60sp"
                android:hint="Enter Your Salary"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"></EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bSave_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"

                    android:text="Save"
                    android:textAlignment="center"
                    android:textColor="#00ff00"
                    android:textSize="30dp"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/bView_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:text="View"
                    android:textAlignment="center"
                    android:textColor="#00ff00"
                    android:textSize="30dp"
                    android:textStyle="bold"></Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>